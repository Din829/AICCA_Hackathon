# AICCA Environment Configuration File
# AI Content Credibility Agent Configuration

# ========== Core API Keys (Required) ==========
GOOGLE_API_KEY=your_google_api_key_here

# Additional AI Service Keys (Optional)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# ========== Content Verification APIs ==========
# AI Text Detection
SAPLING_API_KEY=your_sapling_api_key_here
# GPTZERO_API_KEY=your_gptzero_api_key_here  # Optional fallback

# Image Verification - Sightengine API
SIGHTENGINE_API_USER=your_sightengine_user
SIGHTENGINE_API_SECRET=your_sightengine_secret

# Google Vision API (GCP required for hackathon)
GOOGLE_APPLICATION_CREDENTIALS=path_to_service_account_json
GOOGLE_CLOUD_PROJECT=your_project_id

# ========== System Configuration ==========
# Language Setting (en/zh_CN/ja_JP)
AICCA_LANG=zh_CN

# Server Configuration
AICCA_HOST=localhost
AICCA_PORT=8000
AICCA_DEBUG=true
AICCA_LOG_LEVEL=INFO

# Agent Configuration
AICCA_MAX_TURNS=100
AICCA_AUTO_EXECUTE=false

# ========== Content Processing ==========
# AI Content Detector Settings
AI_DETECTOR_USE_SAPLING=true
AI_DETECTOR_MAX_CHARS=10000
AI_DETECTOR_OPTIMIZE_TEXT=true
AI_DETECTOR_SMART_TRUNCATE=true

# File Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=image/*,video/*,audio/*,text/*,application/pdf
UPLOAD_TEMP_DIR=/tmp/aicca_uploads

# Web Environment Settings
RUNTIME_ENV=web
FILE_READ_ACCEPT_IDS=true
FILE_WRITE_GENERATE_DOWNLOADS=true
WEB_DOWNLOAD_DIRECTORY=/tmp/aicca_downloads
DOWNLOAD_EXPIRY_SECONDS=3600

# Batch Processing
BATCH_MAX_FILES=10
BATCH_TIMEOUT_SECONDS=300
BATCH_PARALLEL_WORKERS=3